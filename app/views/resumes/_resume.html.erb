<section class="resume-container" >
<% @resumes.each do | resume |%>
    <section class="resume-card">
        <header class="cover"><img src="https://picsum.photos/500/550" alt=""></header>
            <section class="info">
                <div class="basic-info">
                    <h2 class="username"><%= resume.name %></h2>
                    <address class="location"><%= resume.city %></address>
                </div>
                <article class="intro">
                    <%= link_to resume.intro&.truncate(50), resume_path(resume) %>
                </article>            
            </section>
        <footer>
            <div class="update">更新時間: <%= formatDate(resume.updated_at)%></div>

            <div class="functions">
            <%= link_to "編輯", edit_resumes_path(resume), class: 'btn' %>
            <%= link_to "建立副本", 'model', class: 'btn'  %>
            <%= link_to "刪除", resume_path(resume), class: 'btn', method: 'delete', data: { confirm: 'Are you sure?' }  %>
            
            
            </div>
        </footer>
    </section>
<% end %>

</section>